{
    "configurations": [
        {
            "name": "Run server",
            "type": "pwa-node",
            "request": "launch",
            "program": "${workspaceFolder}/src/app.ts",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--inspect=127.0.0.1:9229",
                "--allow-all"
            ],
            "attachSimplePort": 9229,
			"envFile": "${workspaceFolder}/.env",
			"outputCapture": "std"
        }
    ]
}